<div class="container">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Email</th>
      <th>Itinerarios</th>
      <th>Miembro hace:</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.username, user%></td>
      <td><%= user.email %></td>
      <td><%= user.articles.count %></td>
      <td><%= time_ago_in_words(user.created_at) %></td>
      <td>

      <% if logged_in? && user == current_user %>
      <%= link_to "Editar", edit_user_path(user), class:"btn btn-success" %>
      <td><%= button_to "Eliminar", user_path(current_user), class:"btn btn-danger", method: :delete, form: { data: { turbo_confirm:"Â¿Seguro quieres eliminar este Usuario?"}} %></td>
      </td>
    </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
</div>