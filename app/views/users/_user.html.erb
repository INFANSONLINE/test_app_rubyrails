<div class="container">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Email</th>
      <th>Creado</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td><%= time_ago_in_words(user.created_at) %></td>
      <td>
      <%= link_to "Mostrar usuario", user %>
      <%= link_to "Editar usuario", edit_user_path(user) %>
      <td><%= button_to "Destruir usuario", user, method: :delete, form: { data: { turbo_confirm:"Â¿Seguro quieres eliminar este usuario?"}} %></td>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>