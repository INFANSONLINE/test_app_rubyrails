<%= form_with(model: article) do |form| %>

  <div class="container mb-3" style="background:white">
  <%= render 'shared/errors' %>
  <div class="form-label"><br>
    <%= form.label :title, class: "col-2 col-form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-label">
    <%= form.label :description, class: "col-2 col-form-label" %>
    <%= form.text_area :description, rows:8, class: "form-control" %>
  </div>

  <div>
    <button type="submit" class="btn btn-success mb-3">Guardar</button><br><br>
  </div>
  </div>
<% end %>
